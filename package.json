{
  "name": "the-frontview",
  "author": "Marvin Stickel <marv.stickel@gmail.com>",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "astro dev",
    "lint": "concurrently -c 'auto' 'npm:lint:*(!fix)'",
    "lint:eslint": "pnpm eslint --format=pretty .",
    "lint:prettier": "pnpm prettier --check .",
    "lint:types": "tsc",
    "lint:astro": "astro check",
    "lint:fix": "concurrently -c 'auto' 'npm:lint:fix:*'",
    "lint:fix:eslint": "pnpm eslint --format=pretty --fix .",
    "lint:fix:prettier": "pnpm prettier -w .",
    "test": "export ENVIRONMENT_URL=http://localhost:4321 && concurrently -k -s 'command-test' -c 'auto' -n start,test 'pnpm start' 'pnpm run playwright'",
    "test:ui": "export ENVIRONMENT_URL=http://localhost:4321 && concurrently -k -s 'command-test' -c 'auto' -n start,test 'pnpm start' 'pnpm run playwright:ui'",
    "test:cleanup": "rm *.png || rm -rf test-results/*",
    "test:quick": "pnpm test && pnpm test:cleanup",
    "playwright": "wait-on http://localhost:4321 && playwright test",
    "playwright:ui": "wait-on http://localhost:4321 && playwright test --ui",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/check": "0.3.1",
    "@astrojs/rss": "3.0.0",
    "@fontsource/inter": "5.0.15",
    "@fontsource/quicksand": "5.0.15",
    "@fontsource/source-code-pro": "5.0.15",
    "astro": "3.4.4",
    "date-fns": "2.30.0",
    "hastscript": "8.0.0",
    "mdast-util-to-string": "4.0.0",
    "photoswipe": "5.4.2",
    "reading-time": "2.0.0-1",
    "rehype-add-classes": "1.0.0",
    "rehype-autolink-headings": "7.0.0",
    "rehype-wrap": "1.1.0",
    "remark-hint": "1.0.10",
    "remark-shiki-twoslash": "3.1.3",
    "remark-toc": "9.0.0",
    "sharp": "0.32.6"
  },
  "devDependencies": {
    "@astrojs/markdown-remark": "3.3.0",
    "@astrojs/mdx": "1.1.3",
    "@astrojs/partytown": "2.0.2",
    "@astrojs/prefetch": "0.4.1",
    "@astrojs/sitemap": "3.0.3",
    "@astrojs/tailwind": "5.0.2",
    "@astrojs/vercel": "5.2.0",
    "@playwright/test": "1.38.1",
    "@types/remark-hint": "1.0.6",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "astro-compress": "2.2.3",
    "astro-compressor": "0.4.1",
    "astro-eslint-parser": "0.16.0",
    "astro-robots-txt": "1.0.0",
    "astro-seo": "0.8.0",
    "concurrently": "8.2.2",
    "eslint": "8.53.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "39.1.1",
    "eslint-formatter-pretty": "5.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-astro": "0.29.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-mdx": "2.2.0",
    "eslint-plugin-n": "16.3.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-tailwindcss": "3.13.0",
    "gray-matter": "4.0.3",
    "husky": "8.0.3",
    "lint-staged": "15.0.2",
    "prettier": "3.0.3",
    "prettier-plugin-astro": "0.12.1",
    "prettier-plugin-tailwindcss": "0.5.6",
    "rollup": "4.3.0",
    "tailwindcss": "3.3.5",
    "typescript": "5.2.2",
    "wait-on": "7.1.0"
  },
  "engines": {
    "node": ">=18.0.0 <19.0.0",
    "pnpm": ">=8.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix",
    "**/*": "prettier -w --ignore-unknown"
  }
}
