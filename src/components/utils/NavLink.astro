---
export interface Props {
  href: string;
  prefetch?: boolean;
  newTab?: boolean;
  ariaLabel?: string;
  classString?: string;
}

const {
  href,
  prefetch,
  newTab,
  ariaLabel = undefined,
  classString = "",
} = Astro.props;
---

<a
  href={href}
  target={newTab ? "_blank" : undefined}
  rel={prefetch && newTab
    ? "prefetch, noopener, noreferrer"
    : prefetch
    ? "prefetch"
    : newTab
    ? "noopener, noreferrer"
    : undefined}
  aria-label={ariaLabel}
  class={`${classString} inline-flex transition-colors duration-300 hover:text-teal-700 hover:underline hover:underline-offset-2 active:!text-teal-400 active:duration-100 dark:hover:text-teal-500 dark:active:!text-teal-700`}
>
  <slot />
</a>
