{
  "extends": "astro/tsconfigs/base",
  "include": [
    ".eslintrc.cjs",
    "tailwind.config.cjs",
    "astro.config.mjs",
    "./src",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.jsx",
    "./src/**/*.tsx",
    "./src/**/*.astro",
    "./plugins/**/*.js",
    "./plugins/**/*.ts",
    "./__checks__",
    "./__checks__/*.js",
    "./__checks__/*.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "jsx": "react-jsx",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "types": ["@astrojs/image/client"],
    "checkJs": true,
    "verbatimModuleSyntax": true
  }
}
