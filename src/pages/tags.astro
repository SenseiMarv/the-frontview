---
// eslint-disable-next-line import/no-unresolved
import { getLivePosts } from "../components/posts/filterPosts.js";
import Overview from "../components/tags/Overview.astro";
// eslint-disable-next-line import/no-unresolved
import { sortTagsByUsage } from "../components/tags/sortTags.js";
import Layout from "../layouts/Layout.astro";

const sortedTags = sortTagsByUsage(
  getLivePosts(await Astro.glob("./posts/*.mdx"))
);
---

<Layout
  title="Tags | The Frontview"
  description="A list of all tags that are used in my blog posts in my personal blog. Author: Marvin Stickel"
>
  <h1 class="mt-12 mb-8 text-6xl md:mt-24 md:mb-16">Tags</h1>
  <div class="mt-4">
    <Overview tags={sortedTags} />
  </div>
</Layout>
