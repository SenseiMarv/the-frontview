---
import Profile from "../components/home-page/Profile.astro";
import Overview from "../components/post/Overview.astro";
import Divider from "../components/utils/Divider.astro";
import { sortPostsByDate } from "../components/utils/sortPosts";
import Layout from "../layouts/Layout.astro";

const posts = sortPostsByDate(await Astro.glob("./posts/**/*.mdx"));
---

<Layout title="The Frontview">
  <div class="mt-12 md:mt-24">
    <Profile />
    <h2 class="mt-12 text-2xl md:mt-24 md:text-4xl">Recent posts</h2>
    <div class="mt-2 md:mt-4">
      <Divider />
    </div>
    <div class="mt-2 md:mt-4">
      <Overview posts={posts.slice(undefined, 9)} prefetch />
    </div>
    <div class="mt-4 flex justify-center md:mt-8 lg:mt-16">
      <a
        href="/posts"
        rel="prefetch"
        class="text-md inline-flex items-center rounded-lg bg-gray-600 px-3 py-2 text-center transition-colors duration-300 hover:bg-teal-500"
        >See all posts</a
      >
    </div>
  </div>
</Layout>
