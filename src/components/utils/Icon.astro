---
import { twJoin } from '../utils/twJoin';

export interface Props {
  iconSet?: string;
  name: string;
  classString?: string;
}

const { iconSet = 'fluent-emoji', name, classString = '' } = Astro.props;
---

<iconify-icon
  icon={`${iconSet}:${name}`}
  class={twJoin('inline-flex align-bottom text-2xl', classString)}
></iconify-icon>
