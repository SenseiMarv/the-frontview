{
  "name": "the-frontview",
  "author": "Marvin Stickel <marv.stickel@gmail.com>",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "astro dev",
    "lint": "concurrently -c 'auto' 'npm:lint:*(!fix)'",
    "lint:eslint": "pnpm eslint --format=pretty src/",
    "lint:prettier": "pnpm prettier --list-different --plugin-search-dir=. .",
    "lint:types": "tsc",
    "lint:astro": "astro check",
    "lint:fix": "concurrently -c 'auto' 'npm:lint:fix:*'",
    "lint:fix:eslint": "pnpm eslint --format=pretty src/ --fix;",
    "lint:fix:prettier": "pnpm prettier --write --plugin-search-dir=. .",
    "test": "export ENVIRONMENT_URL=http://localhost:3000 && concurrently -k -s 'command-test' -c 'auto' -n start,test 'pnpm start' 'pnpm run playwright'",
    "test:ui": "export ENVIRONMENT_URL=http://localhost:3000 && concurrently -k -s 'command-test' -c 'auto' -n start,test 'pnpm start' 'pnpm run playwright:ui'",
    "test:cleanup": "rm *.png",
    "test:quick": "pnpm test && pnpm test:cleanup",
    "playwright": "wait-on http://localhost:3000 && playwright test",
    "playwright:ui": "wait-on http://localhost:3000 && playwright test --ui",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/rss": "2.4.3",
    "@fontsource/inter": "5.0.2",
    "@fontsource/quicksand": "5.0.2",
    "@fontsource/source-code-pro": "5.0.2",
    "astro": "2.5.6",
    "date-fns": "2.30.0",
    "hastscript": "7.2.0",
    "mdast-util-to-string": "3.2.0",
    "reading-time": "2.0.0-1",
    "rehype-add-classes": "1.0.0",
    "rehype-autolink-headings": "6.1.1",
    "rehype-wrap": "1.1.0",
    "remark-hint": "1.0.10",
    "remark-shiki-twoslash": "3.1.3",
    "remark-toc": "8.0.1",
    "sharp": "0.32.1",
    "theme-change": "2.5.0"
  },
  "devDependencies": {
    "@astrojs/image": "0.16.9",
    "@astrojs/markdown-remark": "2.2.1",
    "@astrojs/mdx": "0.19.5",
    "@astrojs/partytown": "1.2.3",
    "@astrojs/prefetch": "0.2.3",
    "@astrojs/sitemap": "1.3.2",
    "@astrojs/tailwind": "3.1.3",
    "@astrojs/vercel": "3.4.1",
    "@playwright/test": "1.32.1",
    "@tailwindcss/line-clamp": "0.4.4",
    "@typescript-eslint/eslint-plugin": "5.59.8",
    "@typescript-eslint/parser": "5.59.8",
    "astro-compress": "1.1.46",
    "astro-compressor": "0.4.0",
    "astro-eslint-parser": "0.14.0",
    "astro-robots-txt": "0.5.0",
    "astro-seo": "0.7.2",
    "concurrently": "8.1.0",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard-with-typescript": "34.0.1",
    "eslint-formatter-pretty": "5.0.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-astro": "0.27.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-mdx": "2.1.0",
    "eslint-plugin-n": "16.0.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-tailwindcss": "3.12.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "prettier-plugin-astro": "0.9.1",
    "prettier-plugin-tailwindcss": "0.3.0",
    "rollup": "3.23.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.3",
    "wait-on": "7.0.1"
  },
  "engines": {
    "node": ">=18.0.0 <19.0.0",
    "pnpm": ">=8.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix",
    "**/*": "prettier --write --plugin-search-dir=. --ignore-unknown"
  }
}
