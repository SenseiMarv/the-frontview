{
  "name": "the-frontview",
  "author": "Marvin Stickel <marv.stickel@gmail.com>",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "astro dev",
    "lint": "concurrently -c 'auto' 'npm:lint:*(!fix)'",
    "lint:eslint": "pnpm eslint --format=pretty .",
    "lint:prettier": "pnpm prettier --check .",
    "lint:types": "tsc",
    "lint:astro": "astro check",
    "lint:fix": "concurrently -c 'auto' 'npm:lint:fix:*'",
    "lint:fix:eslint": "pnpm eslint --format=pretty --fix .",
    "lint:fix:prettier": "pnpm prettier -w .",
    "test": "export ENVIRONMENT_URL=http://localhost:4321 && concurrently -k -s 'command-test' -c 'auto' -n start,test 'pnpm start' 'pnpm run playwright'",
    "test:ui": "export ENVIRONMENT_URL=http://localhost:4321 && concurrently -k -s 'command-test' -c 'auto' -n start,test 'pnpm start' 'pnpm run playwright:ui'",
    "test:cleanup": "rm *.png || rm -rf test-results/*",
    "test:quick": "pnpm test && pnpm test:cleanup",
    "playwright": "wait-on http://localhost:4321 && playwright test",
    "playwright:ui": "wait-on http://localhost:4321 && playwright test --ui",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "0.5.5",
    "@astrojs/rss": "4.0.5",
    "@fontsource/inter": "5.0.16",
    "@fontsource/quicksand": "5.0.16",
    "@fontsource/source-code-pro": "5.0.16",
    "@vercel/speed-insights": "1.0.10",
    "astro": "4.4.4",
    "astro-og-canvas": "0.4.2",
    "canvaskit-wasm": "0.39.1",
    "date-fns": "3.3.1",
    "hastscript": "9.0.0",
    "mdast-util-to-string": "4.0.0",
    "photoswipe": "5.4.3",
    "reading-time": "2.0.0-1",
    "rehype-add-classes": "1.0.0",
    "rehype-autolink-headings": "7.1.0",
    "rehype-wrap": "1.1.0",
    "remark-shiki-twoslash": "3.1.3",
    "remark-toc": "9.0.0",
    "sharp": "0.32.6",
    "unist-util-visit": "5.0.0"
  },
  "devDependencies": {
    "@astrojs/markdown-remark": "4.2.1",
    "@astrojs/mdx": "2.1.1",
    "@astrojs/partytown": "2.0.4",
    "@astrojs/sitemap": "3.1.1",
    "@astrojs/tailwind": "5.1.0",
    "@astrojs/vercel": "7.3.3",
    "@playwright/test": "1.38.1",
    "@types/remark-hint": "1.0.6",
    "@types/unist": "3.0.2",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "astro-compressor": "0.4.1",
    "astro-eslint-parser": "0.16.3",
    "astro-robots-txt": "1.0.0",
    "astro-seo": "0.8.2",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "43.0.1",
    "eslint-formatter-pretty": "6.0.1",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-astro": "0.31.4",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-mdx": "3.1.5",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-simple-import-sort": "12.0.0",
    "eslint-plugin-tailwindcss": "3.15.1",
    "gray-matter": "4.0.3",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "prettier-plugin-astro": "0.13.0",
    "prettier-plugin-tailwindcss": "0.5.11",
    "rollup": "4.12.0",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3",
    "wait-on": "7.2.0"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "pnpm": ">=8.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix",
    "**/*": "prettier -w --ignore-unknown"
  }
}
