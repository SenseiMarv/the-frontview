---
import Overview from "../../components/post/Overview.astro";
import { sortPostsByDate } from "../../components/post/sortPosts";
import Layout from "../../layouts/Layout.astro";

const posts = sortPostsByDate(await Astro.glob("./**/*.mdx"));
---

<Layout title="All Posts - The Frontview">
  <h1 class="mt-12 mb-8 text-6xl md:mt-24 md:mb-16">All posts</h1>
  <div class="mt-4">
    <Overview posts={posts} />
  </div>
</Layout>
