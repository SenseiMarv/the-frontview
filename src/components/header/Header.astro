---
import Divider from "../utils/Divider.astro";
import ExternalLink from "../utils/ExternalLink.astro";
import NavLink from "../utils/NavLink.astro";
import GitHubIcon from "./GitHubIcon.astro";
---

<header class="p-3 pt-4 md:px-6 md:pt-8">
  <div class="mb-3">
    <a href="/" rel="prefetch" class="text-4xl font-bold md:text-6xl"
      ><h1>The Frontview</h1>
    </a>
  </div>
  <div class="flex gap-4 text-lg">
    <NavLink href="/" prefetch>Home</NavLink>
    <NavLink href="/posts" prefetch>All Posts</NavLink>
    <NavLink href="/tags" prefetch classString="mr-auto">Tags</NavLink>
    <ExternalLink href="https://github.com/SenseiMarv/the-frontview">
      <div
        class="w-6 fill-white transition-colors duration-300 hover:fill-teal-500"
      >
        <GitHubIcon />
      </div>
    </ExternalLink>
  </div>
  <div class="mt-2 md:mt-4">
    <Divider noSpacing />
  </div>
</header>
