---
import { Image } from "@astrojs/image/components";

import GitHubIcon from "../../../assets/icons/GitHub.png";
import Divider from "../utils/Divider.astro";
import ExternalLink from "../utils/ExternalLink.astro";
import NavLink from "./NavLink.astro";
---

<header class="p-3 pt-4 md:px-6 md:pt-8">
  <div class="mb-3">
    <a href="/" class="text-4xl font-bold md:text-6xl"
      ><h1>The Frontview</h1>
    </a>
  </div>
  <div class="flex gap-4 text-lg">
    <NavLink href="/">Home</NavLink>
    <NavLink href="/posts">All Posts</NavLink>
    <NavLink href="/tags" classString="mr-auto">Tags</NavLink>
    <ExternalLink href="https://github.com/SenseiMarv/the-frontview">
      <div class="w-6">
        <Image src={GitHubIcon} width={50} alt="GitHub" />
      </div>
    </ExternalLink>
  </div>
  <div class="mt-2 md:mt-4">
    <Divider />
  </div>
</header>
