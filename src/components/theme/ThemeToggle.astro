---
import Emoji from "../utils/Emoji.astro";
---

<button
  data-toggle-theme="light,dark"
  data-act-class="ACTIVECLASS"
  class="transition-colors duration-300 hover:text-teal-700 dark:hover:text-teal-500"
  aria-label="Toggle light/dark theme"
>
  <Emoji
    iconSet="fluent-emoji-high-contrast"
    name="first-quarter-moon"
    classString="hover:fill-teal-500"
  />
</button>
